{
  "compilerOptions": {
    "module": "ESNext", // Allows ES module imports/exports
    "target": "ES2020", // Can be ES2020 or later
    "moduleResolution": "node", // Resolves modules like Node.js
    "esModuleInterop": true, // For compatibility with CommonJS modules
    "strict": true, // Enable strict type checking
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist", // Output directory for compiled files
    "baseUrl": ".", // Base path for modules
    "paths": {
      "@/*": ["src/*"] // Path alias for easier imports
    }
  },
  "include": ["src/**/*"], // Include all TypeScript files in the `src` directory
  "exclude": ["node_modules"] // Exclude the `node_modules` directory
}