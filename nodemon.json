{
  "watch": ["src/**/*.ts", "src/**/*.json"],
  "ext": "ts,json",
  "ignore": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "node_modules"
  ],
  "exec": "ts-node ./src/index.ts",
  "env": {
    "NODE_ENV": "development"
  },
  "verbose": true,
  "pollingInterval": 500,
  "legacyWatch": false
}
